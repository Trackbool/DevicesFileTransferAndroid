<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:id="@+id/devicesCardView">

    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/deviceIconImageView"
            android:layout_width="70dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/device_icon_description"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/deviceNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/deviceIconImageView"
            android:textSize="22sp"
            tools:text="PC Adri" />

        <TextView
            android:id="@+id/deviceOsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deviceNameTextView"
            android:layout_toEndOf="@+id/deviceIconImageView"
            android:textSize="16sp"
            tools:text="Windows 10" />

        <TextView
            android:id="@+id/deviceIpAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deviceOsTextView"
            android:layout_toEndOf="@+id/deviceIconImageView"
            android:textSize="12sp"
            tools:text="192.168.1.48" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>